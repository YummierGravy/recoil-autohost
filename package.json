{
  "name": "recoil-host",
  "version": "0.0.1",
  "description": "Simple script to start recoil dedicated instannces.",
  "scripts": {
    "compile-schemas": "json2ts -i src/schemas -o src/types  --style.useTabs --style.singleQuote",
    "start": "tsc && node --enable-source-maps dist/main.js",
    "build": "tsc",
    "test": "tsc && node --enable-source-maps --test",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "author": "Marek Rusinowski",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@fastify/websocket": "^8.3.1",
    "fastify": "^4.26.0",
    "recoil-tdf": "^1.0.0",
    "tiny-typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.11.16",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "json-schema-to-typescript": "^13.1.2",
    "pino-pretty": "^10.3.1",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
